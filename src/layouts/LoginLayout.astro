---
import { LoginForm } from  "../components/login/LoginForm.tsx";
import  NavBar  from "../components/login/NavBarLogin.astro";
import  Aside  from "../components/login/Aside.astro";

interface Props {
    title: string
}
const {title} = Astro.props
---
<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="relative h-screen p-2 gap-1">
      <nav class="bg-white p-4">
        <NavBar/>
      </nav>
      <main class="bg-white flex flex-col overflow-y-auto p-4">
        <div>
          <LoginForm client:load />
        </div>
      </main>
      <aside class="bg-white p-4">
        <Aside/>
      </aside>
    </div>
  </body>
</html>

<style>
  #app {
    display: grid;
    grid-template-areas:
      "nav nav nav"
      "aside aside main";
    grid-template-columns: 2fr 2fr 4fr;
    grid-template-rows: auto 1fr;
    height: 100vh;
  }

  nav {
    grid-area: nav;
  }

  main {
    grid-area: main;
  }

  aside {
    grid-area: aside;
  }

  main > div {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  @media (max-width: 768px) {
    #app {
      grid-template-areas:
        "nav"
        "main"
        "aside";
      grid-template-columns: 1fr;
      grid-template-rows: auto 1fr auto;
    }

    aside {
      margin-top: 1em;
    }
  }
</style>
